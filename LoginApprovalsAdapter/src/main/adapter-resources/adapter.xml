<mfp:adapter name="LoginApprovalsAdapter"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:mfp="http://www.ibm.com/mfp/integration"
	xmlns:http="http://www.ibm.com/mfp/integration/http">

	<displayName>LoginApprovalsAdapter</displayName>
	<description>LoginApprovalsAdapter</description>

	<JAXRSApplicationClass>com.github.mfpdev.LoginApprovalsAdapterApplication</JAXRSApplicationClass>

	<property name="webURLForNotify" defaultValue="http://localhost:6004"/>

	<securityCheckDefinition name="UserLogin" class="com.github.mfpdev.UserLoginSecurityCheck">
		<property name="maxAttempts" defaultValue="3" displayName="How many attempts are allowed"/>
		<property name="blockedStateExpirationSec" defaultValue="10" displayName="How long before the client can try again (seconds)"/>
		<property name="successStateExpirationSec" defaultValue="60" displayName="How long is a successful state valid for (seconds)"/>
	</securityCheckDefinition>

	<securityCheckDefinition name="WebUserLogin" class="com.github.mfpdev.WebUserLoginSecurityCheck">
		<property name="maxAttempts" defaultValue="3" displayName="How many attempts are allowed"/>
		<property name="blockedStateExpirationSec" defaultValue="10" displayName="How long before the client can try again (seconds)"/>
		<property name="successStateExpirationSec" defaultValue="60" displayName="How long is a successful state valid for (seconds)"/>
		<property name="push_server_url" defaultValue="http://localhost:9080" displayName="MobileFirst server URL"/>
		<property name="confidential_client_credentials" defaultValue="test:test" displayName="Confidential client user:password"/>
	</securityCheckDefinition>
</mfp:adapter>
